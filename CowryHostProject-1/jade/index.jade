doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title CowryHost - Web Hosting Solution
    block styles
      link(rel='stylesheet', href='../../stylesheets/bootstrap/bootstrap.css')
      link(rel='stylesheet', href='../../fontawesome/releases/v5.6.3/css/all.css')
      link(rel='stylesheet', href='../../stylesheets/animate/animate.css')
      link(rel='stylesheet', href='css/style.css')
  body
    block content
      block header
      // Navigation Bar 
      block nav
        nav.navbar.navbar-expand-lg.navbar-light.fixed-top
          
          button.navbar-toggler.mr-2(type='button', data-toggle='collapse', data-target='#responsiveNavbar', aria-controls='responsiveNavbar', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          
          #responsiveNavbar.collapse.navbar-collapse
            - let navLinks = ["Home", "Hosting", "Domains", "Services", "About Us", "Contact"];
            - let n = 0;
            ul.navbar-nav.mt-2.mt-lg-0
              each links in navLinks
                if links == "Hosting" || links == "Domains" || links == "Services"
                  - let i = 0;
                  li.nav-item
                    a.nav-link(href='##{links.toLowerCase()}')= links
                    ul(class='drop-menu menu-#{++n}')
                      while i < links.length
                        li.drop-item
                          a.drop-link(href='#{links[i].toLowerCase()}.html')= links.substr(0, i+1)
                        - i++
                else
                  li.nav-item
                    a.nav-link(href='#{links.toLowerCase().replace(" ", "")}.html')= links
            - n = 0;
        // End of Navigation Bar 

      // Top Carousel Slide 
      block topCarousel
        #topCarousel
          - let topSlides = "topSlides";
          .carousel.slide.carousel-fade(id='#{topSlides}', data-ride='carousel', data-interval='20000')
            - let nSlides = 3;
            ul.carousel-indicators
              while n <= nSlides
                if n == 0
                  li.active(data-target='##{topSlides}', data-slide-to='#{n}')
                else
                  li(data-target='##{topSlides}', data-slide-to='#{n}')
                - n++
            - n = 0;
            .carousel-inner(role='listbox')
              while n <= nSlides
                if n == 0
                  .carousel-item.active
                    img(src='img/banner#{n+1}.jpg', alt='silde-#{n}')
                    .carousel-caption
